@{
    var listdata = (List<int>)ViewData["listdata"];
}

<div style="margin-top:5rem !important;" class="container">
    <div class="card card-raised h-100">
        <div class="card-header bg-transparent px-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="me-4">
                    <h2 class="card-title mb-0">Sales Reports</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row gx-4">
                <div class="col-12 col-xxl-2">
                    <div class="d-flex flex-column flex-md-row flex-xxl-column align-items-center align-items-xl-start justify-content-between">
                        <div class="mb-4 text-center text-md-start">
                            <div class="text-xs font-monospace text-muted mb-1">Actual Revenue</div>
                            <div class="display-5 fw-500">$@ViewBag.Revenues</div>
                        </div>
                        <div class="mb-4 text-center text-md-start">
                            <div class="text-xs font-monospace text-muted mb-1">Revenue Target</div>
                            <div class="display-5 fw-500">$5,000</div>
                        </div>
                        <div class="mb-4 text-center text-md-start">
                            <div class="text-xs font-monospace text-muted mb-1">Goal</div>
                            <div class="display-5 fw-500 text-success">@ViewBag.Goals %</div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-xxl-10">
                    <canvas id="myChart" width="633" height="316" style="display: block; box-sizing: border-box; width: 633.766px; height: 316px;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.8.0/dist/chart.min.js"></script>
<script>
    var myArray = [];

    @foreach (var d in listdata)
    {
        @:myArray.push("@d");
    }

        const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'March', 'April', 'May', 'Jun', 'Jul', 'Arg', 'Sep', 'Oct', 'Nov', 'Dec'],
            datasets: [{
                label: 'Orders',
                data: myArray,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>




