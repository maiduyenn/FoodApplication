@model IEnumerable<FoodApplication.Models.OrderModel>
@{
    ViewData["Title"] = "Order History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px">
    <div class="w-85 mx-auto p-4 radius-background">
        <div class="row">
            <div class="col-md-12">
                <h3>Your Order History</h3>
                <div class="divider"></div>
                <table id="orderHistory" class="table checkout-order align-middle">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr href="/order/orderdetail/@item.OrderId">
                                <td>
                                    <p><a style="background-color:aquamarine; padding:5px; border-radius:25%" class="" href="/order/orderdetail/@item.OrderId">Detail</a></p>
                                </td>
                                <td>
                                    <p>@item.CustomerName</p>
                                </td>
                                <td>
                                    <p>@item.PhoneNumber</p>
                                </td>
                                <td>
                                    <p>@item.CustomerAddress</p>
                                </td>
                                <td><p>@item.OrderDate</p></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
