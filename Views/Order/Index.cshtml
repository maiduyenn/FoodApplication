<div class="container" style="margin-top: 100px">
    <div class="w-75 mx-auto p-4 radius-background">
        <div class="row">
            <div class="col-md-6">
                <h3>Customer Information</h3>
                <div class="divider"></div>
                <div class="mb-3">
                    <label for="customerName" class="form-label">Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="customerName" required />
                </div>
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                    <input type="text"
                           class="form-control"
                           id="phoneNumber"
                           required></input>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label"></label>
                    Address <span class="text-danger">*</span></label>
                    <input type="text"
                           class="form-control"
                           id="address"
                           required></input>
                </div>
                <div class="mb-3">
                    <label for="orderNote" class="form-label">Notes</label>
                    <textarea class="form-control" id="orderNote" rows="3"></textarea>
                </div>
            </div>
            <div class="col-md-6">
                <h3>Your Order</h3>
                <div class="divider"></div>
                <table id="tableOrder" class="table checkout-order align-middle">
                    <tbody>
                    </tbody>
                </table>
                <div class="d-flex flex-row-reverse">
                    <table class="checkout-payment text-end">
                        <tr>
                            <td><p>Subtotal:</p></td>
                            <td>
                                <p class="text-danger" id="subtotal"></p>
                            </td>
                        </tr>
                        <tr>
                            <td><p>Discount:</p></td>
                            <td>
                                <p id="discount" value="@ViewBag.discount" class="text-danger"> @ViewBag.discount %</p>
                            </td>
                        </tr>
                        <tr>
                            <td><p>Total:</p></td>
                            <td>
                                <p class="text-danger" id="total">/p>
                            </td>
                        </tr>
                    </table>

                </div>

            </div>
        </div>
        <button id="placeOrderButton" onclick="order.placeOrder()" class="btn btn-success w-100" type="submit">Place Order</button>
    </div>
</div>
@section Scripts {
    <script>
        let discount = $("#discount").attr("value");
        order.renderOrder(cart.products);
        $("#subtotal").text("$"+order.calculate(cart.products));
        $("#total").text("$"+ (order.calculate(cart.products) - order.calculate(cart.products) * discount/100));
    </script>
}
