@model FoodApplication.Models.OrderResponse
@{
    ViewData["Title"] = "Order History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px">
    <div class="w-75 mx-auto p-4 radius-background">
        <div class="row">
            <div class="col-md-12">
                <h3>Your Order Detail</h3>
                <div class="divider"></div>
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <thead class="border-bottom">
                            <tr class="text-xs font-monospace text-muted fw-500">
                                <th class="text-end" scope="col"></th>
                                <th class="text-end" scope="col">Quantity</th>
                                <th class="text-end" scope="col">Price</th>
                                <th class="text-end" scope="col">Discount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model.OrderDetails)
                            {
                                <tr class="border-bottom">
                                    <td class="d-flex align-items-center">
                                        <img style="width:10%;" src="@item.Product.ImageUrl"
                                         alt="about-image"
                                         loading="lazy" />
                                         <span class="ms-2">@item.Product.Name</span>
                                    </td>
                                    <td class="text-end fw-500">   @item.Quantity</td>
                                    <td class="text-end fw-500">$@item.UnitPrice</td>
                                    <td class="text-end fw-500">@item.Discount %</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

