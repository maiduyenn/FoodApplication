@model FoodApplication.Models.OrderResponse
@{
    ViewData["Title"] = "Order History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px">
    <div class="w-85 mx-auto p-4 radius-background">
        <div class="row">
            <div class="col-md-12">
                <h3>Your Order Detail</h3>
                <div class="divider"></div>
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <thead class="border-bottom">
                            <tr class="text-xs font-monospace text-muted fw-500">
                                <th class="text-center" scope="col"></th>
                                <th class="text-center" scope="col">Quantity</th>
                                <th class="text-center" scope="col">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model.OrderDetails)
                            {
                                <tr class="border-bottom">
                                    <td class="d-flex align-items-center">
                                        <img style="width:10%;" src="@item.Product.ImageUrl"
                                         alt="about-image"
                                         loading="lazy" />
                                         <span class="ms-2">@item.Product.Name</span>
                                    </td>
                                    <td class="text-center fw-500">@item.Quantity</td>
                                    <td class="text-center fw-500">$@item.UnitPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                          <div class="d-flex flex-row-reverse">
                    <table class="checkout-payment ">
                        <tr>
                            <td class="text-left"><span>Discount:</span></td>
                            <td>
                                <span style="font-weight: 600;" id="discount"  class="text-danger text-right"> @Model.Discount %</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-left"><span>Total:</span></td>
                            <td>
                                <span style="font-weight: 600;" class="text-danger font-bold text-right" id="total">$ @Model.Total</span>
                            </td>
                        </tr>
                    </table>

                </div>
                </div>
            </div>
        </div>
    </div>
</div>

