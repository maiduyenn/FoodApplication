@model IEnumerable<FoodApplication.Models.RankingResponse>
@{
    ViewData["Title"] = "Ranking";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Dictionary<string, string> listBages = new Dictionary<string, string>
    {
      {"Broze","bg-success" },
      {"Silver","bg-primary" },
      {"Gold","bg-warning" },
    };
}

<div class="container" style="margin-top: 100px">
    <div class="w-75 mx-auto p-4 radius-background">
        <div class="row">
            <div class="col-md-12">
                <h3>Ranking</h3>
                <div class="divider"></div>
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <thead class="border-bottom">
                            <tr class="text-xs font-monospace text-muted fw-500">
                                <th class="text-start" scope="col">Email</th>
                                <th class="text-start" scope="col">Spent Money</th>
                                <th class="text-start" scope="col">Rank</th>
                                <th class="text-start" scope="col">Discount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>$@item.TotalSpent</td>
                                    <td><span class="badge @listBages[item.RankName]">@item.RankName</span></td>
                                    <td>@item.Discount %</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
